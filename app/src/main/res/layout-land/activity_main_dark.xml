<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#000">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000">

            <Button
                android:id="@+id/dayModeBtn"
                android:layout_width="43dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_baseline_wb_sunny_24"
                android:onClick="goToDayMode"
                app:layout_constraintBottom_toBottomOf="@id/resultText"
                app:layout_constraintEnd_toEndOf="@+id/resultText"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="@id/resultText"
                app:layout_constraintTop_toTopOf="@+id/resultText"
                tools:ignore="OnClick" />

            <HorizontalScrollView
                android:id="@+id/historyScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                app:layout_constraintBottom_toTopOf="@+id/resultText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.531">

                <TextView
                    android:id="@+id/historyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:lines="1"
                    android:padding="3dp"
                    android:scrollbars="horizontal"
                    android:textColor="#AAAFABAB"
                    android:textSize="20sp"
                    tools:text="dummy text" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/resultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="109dp"
                android:lines="1"
                android:text="@string/zero"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="42sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="2"
        android:background="#000"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ceBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_grey"
                android:textColor="#fff"
                android:text="@string/CE"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_grey"
                android:textColor="#fff"
                android:text="@string/C"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/removeBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_grey"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:src="@drawable/ic_baseline_backspace_24_white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/equalsBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_orange"
                android:textColor="#fff"
                android:text="@string/equal"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sevenBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_black"
                android:textColor="#fff"
                android:text="@string/seven"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/eightBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_black"
                android:textColor="#fff"
                android:text="@string/eight"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/nineBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_black"
                android:textColor="#fff"
                android:text="@string/nine"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/plusBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_grey"
                android:textColor="#fff"
                android:text="@string/plus"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fourBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_black"
                android:textColor="#fff"
                android:text="@string/four"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/fiveBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_black"
                android:textColor="#fff"
                android:text="@string/five"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sixBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_black"
                android:textColor="#fff"
                android:text="@string/six"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/minusBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_grey"
                android:textColor="#fff"
                android:text="@string/minus"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/oneBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_black"
                android:textColor="#fff"
                android:text="@string/one"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/twoBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_black"
                android:textColor="#fff"
                android:text="@string/two"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/threeBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_black"
                android:textColor="#fff"
                android:text="@string/three"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/timesBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_grey"
                android:textColor="#fff"
                android:text="@string/times"
                android:textAllCaps="false"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/posNegBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_black"
                android:textColor="#fff"
                android:text="@string/posOrNeg"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/zeroBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_black"
                android:textColor="#fff"
                android:text="@string/zero"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/decimalBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_black"
                android:textColor="#fff"
                android:text="@string/decimal"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/divisonBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/button_dark_grey"
                android:textColor="#fff"
                android:text="@string/divide"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>