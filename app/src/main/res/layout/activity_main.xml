<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"/>

    <LinearLayout
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#000000">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
  >

            <Button
                android:id="@+id/ceBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/CE"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/cBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/C"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/removeBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_backspace_24"
                android:backgroundTint="#CAC7C7"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/equalsBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/equal"
                android:textSize="26sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/sevenBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/seven"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/eightBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/eight"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/nineBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/nine"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/plusBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/plus"
                android:textSize="26sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/fourBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/four"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/fiveBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/five"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/sixBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/six"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/minusBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/minus"
                android:textSize="26sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/oneBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/one"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/twoBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/two"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/threeBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/three"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/timesBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/times"
                android:textSize="26sp"
                android:textAllCaps="false"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/posNegBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/posOrNeg"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/zeroBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/zero"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/decimalBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/decimal"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/divisonBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/divide"
                android:textSize="26sp"
                android:textStyle="bold"/>

        </LinearLayout>





    </LinearLayout>

</LinearLayout>